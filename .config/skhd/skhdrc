# Move focus
alt - j: yabai -m window --focus south
alt - k: yabai -m window --focus north
alt - h: yabai -m window --focus west
alt - l: yabai -m window --focus east


# Toggle Floats and Fullscrteen
hyper - t : yabai -m window --toggle float
hyper - f : yabai -m window --toggle zoom-fullscreen


# Throw Window to Spaces
shift + ctrl - 1 : yabai -m window --space 1;
shift + ctrl - 2 : yabai -m window --space 2;
shift + ctrl - 3 : yabai -m window --space 3;
shift + ctrl - 4 : yabai -m window --space 4;
shift + ctrl - 1 : yabai -m window --space 5;
shift + ctrl - 2 : yabai -m window --space 6;
shift + ctrl - 3 : yabai -m window --space 7;
shift + ctrl - 4 : yabai -m window --space 8;
shift + ctrl - 4 : yabai -m window --space 9;


# rotate layout clockwise
shift + alt - r : yabai -m space --rotate 270

# flip along y-axis
shift + alt - y : yabai -m space --mirror y-axis

# flip along x-axis
shift + alt - x : yabai -m space --mirror x-axis

# Rebalance
shift + alt - e : yabai -m space --balance


# Swap Focused to target
shift + alt - j: yabai -m window --swap south
shift + alt - k: yabai -m window --swap north
shift + alt - h: yabai -m window --swap west
shift + alt - l: yabai -m window --swap east